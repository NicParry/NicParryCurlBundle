           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="nicparrycurlbundle.service.class">NicParry\Bundle\NicParryCurlBundle\Service\CurlWrapper</parameter>
    </parameters>

    <services>
        <!--- Annotation Metadata Driver Service -->
        <service id="curl_wrapper" class="%nicparrycurlbundle.service.class%">
            <argument>%nicparrycurlbundle.service.mood%</argument>
        </service>
    </services>
</container>